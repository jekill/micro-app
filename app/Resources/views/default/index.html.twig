{% extends 'base.html.twig' %}
{% block body_class %}main{% endblock %}
{% block body %}

    <Application>
        <div class="application-loader">
            <div class="progress">
                <div id="loading-progress-bar" class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                    Loading ...
                </div>
            </div>
        </div>
    </Application>

    <div class="greeting">
        <div class="text">
            <h1>Hello Guest!</h1>
            <p>Send please your photo</p>
        </div>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2  col-md-4 col-md-offset-4">
                <form class="form" action="{{ path('homepage') }}" method="post" enctype="multipart/form-data">
                    {{ form_errors(form) }}

                    {{ form_errors(form.guest) }}
                    {{ form_widget(form.guest) }}

                    <div style="display: block">
                        {{ form_errors(form.uploadedFile) }}
                        {{ form_widget(form.uploadedFile) }}
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Upload</button>
                    </div>

                    {{ form_widget(form._token) }}

                </form>
            </div>
        </div>

    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function () {
            var progressBar = document.getElementById('loading-progress-bar');
            if (progressBar) {
                progressBar.style.width = '90%';
            }
        })();
    </script>
{% endblock %}
